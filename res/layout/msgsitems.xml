<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal" 
  android:padding="10sp">
  <TextView
  	android:id="@+id/msgrowid"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"/>
  <TextView
  	android:id="@+id/msgrowidcolon"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text=" : "/>
  <TextView
  	android:id="@+id/datecomposed"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content" 
  	android:layout_toRightOf="@id/msgrowidcolon" />
  <TextView
  	android:id="@+id/datecomposedcolon"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text=" : "
  	android:layout_toRightOf="@id/datecomposed" />
  <TextView
  	android:id="@+id/msgtext"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:textStyle="italic"
  	android:singleLine="true"
  	android:ellipsize="end" 
  	android:layout_toRightOf="@id/datecomposedcolon"/>
</LinearLayout>
